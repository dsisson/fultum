{
    "manifest_version": 3,
    "name": "DOM Element Highlighter",
    "version": "1.1",
    "description": "Select and label DOM elements.",
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
